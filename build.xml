<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:aether="antlib:org.eclipse.aether.ant"
         xmlns:ssdp="antlib:ball.ssdp.ant"
         xmlns:util="antlib:ball.util.ant"
         name="ball-upnp" basedir="." default="jar">
  <description>
    ball-upnp.jar
    ---------------------------
    UPnP Implementation Classes

    $Id$
  </description>

  <aether:resolve>
    <dependencies>
      <dependency coords="ball:parent:2.0:xml:compile"/>
    </dependencies>
    <properties/>
  </aether:resolve>
  <import file="${ball:parent:xml}"/>

  <target name="ssdp-discover"
          description="--> Invokes &lt;ssdp-discover/&gt; task."
          depends="jar-classes">
    <ssdp:ssdp-discover/>
  </target>

  <target name="main"
          description="--> Invokes &lt;main/&gt; task."
          depends="jar-classes">
    <util:main classpathref="build.classpath" type="${type}">
      <argument>-p</argument><argument>${port}</argument>
    </util:main>
  </target>

</project>
