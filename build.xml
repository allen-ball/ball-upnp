<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:aether="antlib:org.eclipse.aether.ant"
         xmlns:ssdp="antlib:ball.ssdp.ant"
         xmlns:util="antlib:ball.util.ant"
         name="ball-upnp" basedir="." default="jar">
  <description>
    ball-upnp.jar
    -------------
    UPnP Server

    $Id$
  </description>

  <aether:resolve>
    <dependencies>
      <dependency coords="ball:parent:4:xml:compile"/>
    </dependencies>
    <properties/>
  </aether:resolve>
  <import file="${ball:parent:xml}"/>

  <target name="ssdp-discover"
          description="--> Invokes &lt;ssdp-discover/&gt; task."
          depends="jar-classes">
    <ssdp:ssdp-discover/>
  </target>

</project>
