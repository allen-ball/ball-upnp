<?xml version="1.0" encoding="UTF-8"?>
<project name="ball-upnp" basedir="." default="jar"
         xmlns:artifact="antlib:org.apache.maven.artifact.ant">

  <description>
    ball-upnp.jar
    ---------------------------
    UPnP Implementation Classes

    $Id$
  </description>

  <artifact:dependencies>
    <dependency groupId="ball"
                artifactId="pom-build" type="xml" version="1.0"/>
  </artifact:dependencies>
  <import file="${ball:pom-build:xml}"/>

  <target name="main"
          description="--> Invokes &lt;main/&gt; task."
          depends="jar-classes">
    <taskdef classpathref="build.classpath"
             resource="ball/util/ant/defaults.properties"/>
    <main classpathref="build.classpath" type="${type}">
      <argument>-p</argument><argument>${port}</argument>
    </main>
  </target>

  <target name="ssdp-discover"
          description="--> Invokes &lt;ssdp-discover/&gt; task."
          depends="jar-classes">
    <taskdef classpathref="build.classpath"
             resource="ball/upnp/ant/defaults.properties"/>
    <ssdp-discover/>
  </target>

</project>
